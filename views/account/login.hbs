{{> header}}

<div class="container">
  <div class="page-header">
    <h3>Login</h3>
  </div>

  <form method="POST">
      {{> flash}}
    <div class="col-sm-8 col-sm-offset-2">
      <div class="form-group">
        <label class="control-label" for="email">Email</label>
        <input class="form-control" type="email" name="email" id="email" placeholder="Email" autofocus="true"/>
      </div>
      <div class="form-group">
        <label class="control-label" for="password">Password</label>
        <input class="form-control" type="password" name="password" id="password" placeholder="Password"/>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
        <a class="btn btn-link" href="/forgot">Forgot your password?</a>
        <a class="btn btn-link" href="/signup">Sign up for an account</a>
      </div>
    </div>
  </form>

</div>

{{> footer}}