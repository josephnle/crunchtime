{{> header}}

{{> nav}}

<div class="container">
  <a href="#" data-toggle="modal" data-target="#addTaskModal"><i class="fa fa-plus fa-2x pull-right"></i></a>
  <table class="table">
      {{#each tasks}}
        <tr>
          <td>
            <input id="checkbox{{name}}" type="checkbox">
          </td>
          <td>
            <strong>{{name}}</strong>
            <br/>
              {{course}}
          </td>
        </tr>
      {{/each}}
  </table>

  <!-- Add Task Modal -->
  <div class="modal fade" id="addTaskModal" tabindex="-1" role="dialog" aria-labelledby="addTaskTitle"
       aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
              aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="addTaskTitle">Add Task</h4>
        </div>
        <div class="modal-body">
          <div class="text-center">
            <button id="addFromSourceButton" class="btn btn-primary btn-lg"><i class="fa fa-plus"></i> Add from
              Source
            </button>
          </div>
          <hr/>
          <p><strong>Add Task Manually</strong></p>

          <form id="addTaskForm" method="POST" action="/tasks">
            <div class="form-group">
              <div class="btn-group btn-group-justified" role="group" aria-label="...">
                <div class="btn-group" role="group">
                  <button type="button" class="btn btn-default">COGS 120</button>
                </div>
                <div class="btn-group" role="group">
                  <button type="button" class="btn btn-default">HILD 7B</button>
                </div>
                <div class="btn-group" role="group">
                  <a href="/courses" type="button" class="btn btn-default"><i class="fa fa-plus"> Add</i></a>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="taskTitle">Task Title</label>
              <input type="text" class="form-control" name="title" id="taskTitle" placeholder="">
              <!--<a href="#" class="pull-right"><i class="fa fa-plus"></i> Add more</a>-->
            </div>
            <div class="form-group">
              <label for="taskDue">Due Date</label>
              <input class="datepicker form-control" type="text" name="due" id="taskDue" data-provide="datepicker">
            </div>
            <!--<div class="form-group">-->
              <!--<div class="btn-group btn-group-justified" role="group" aria-label="...">-->
                <!--<div class="btn-group" role="group">-->
                  <!--<button type="button" class="btn btn-default">Shared</button>-->
                <!--</div>-->
                <!--<div class="btn-group" role="group">-->
                  <!--<button type="button" class="btn btn-default">Private</button>-->
                <!--</div>-->
              <!--</div>-->
            <!--</div>-->
            <div class="form-group">
              <input type="submit" class="btn btn-primary" value="Add task" />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="addFromSourceModal" tabindex="-1" role="dialog" aria-labelledby="addTaskTitle"
       aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
              aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="addFromSourceTitle">Add from Source</h4>
        </div>
        <div class="modal-body">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-search fa-fw"></i></span>
            <input type="text" class="form-control" placeholder="Search for a course">
          </div>
          <hr/>
            {{#each courseLists}}
              <ul class="list-group">
                <li class="list-group-item">
                  <div class="pull-right">
                    <i class="fa fa-plus"></i>
                  </div>
                  <strong>
                      {{name}}<br/>by {{owner}}
                  </strong>
                </li>
                  {{#each tasks}}
                    <li class="list-group-item">
                        {{name}}<br/>
                      DUE {{due}}
                    </li>
                  {{/each}}
              </ul>
            {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>

{{> footer}}
