{{> header}}

{{> nav}}

<div class="container-fluid">
  <a href="#" class="addButton" data-toggle="modal" data-target="#addTaskModal"><i class="fa fa-plus fa-2x"></i></a>
  <table class="table">
      {{#each tasks}}
        <tr class="task{{#if completedAt}} text-muted{{/if}}" id="task-{{_id}}">
          <td>
            <input id="task-checkbox-{{_id}}" class="task-checkbox" type="checkbox"{{#if completedAt}} checked{{/if}}>
          </td>
          <td>
            <strong>{{title}}</strong>
            <br/>
              {{course.name}}
          </td>
        </tr>
      {{else}}
        <h2> No Tasks! Good Job! </h2>
      {{/each}}
  </table>

  <!-- Add Task Modal -->
  <div class="modal fade" id="addTaskModal" tabindex="-1" role="dialog" aria-labelledby="addTaskTitle"
       aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
              aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="addTaskTitle">Add Task</h4>
        </div>
        <div class="modal-body">
          <div class="text-center">
            <button id="addFromSourceButton" class="btn btn-primary btn-lg"><i class="fa fa-plus"></i> Add from
              Source
            </button>
          </div>
          <hr/>
          <p><strong>Add Task Manually</strong></p>

          <form id="addTaskForm" method="POST" action="/tasks">
            <div class="form-group">
              <label>Course</label><br/>
                {{#each courses}}
                  <input type="radio" name="course" value="{{_id}}" id="course-{{name}}">
                  <label style="font-weight: normal;" for="course-{{name}}">{{name}}</label>
                {{/each}}
            </div>
            <div class="form-group">
              <label for="taskTitle">Task Title</label>
              <input type="text" class="form-control" name="title" id="taskTitle" placeholder="">
              <!--<a href="#" class="pull-right"><i class="fa fa-plus"></i> Add more</a>-->
            </div>
            <div class="form-group">
              <label for="taskDue">Due Date</label>
              <input class="datepicker form-control" type="text" name="due" id="taskDue" data-provide="datepicker">
            </div>


          <form>
            <!--Asking to share the task with others-->
          <div class="checkbox">
            <label>
              <input type="checkbox"> Share this task with others
            </label>
          </div>
        </form>




            <div class="form-group">
              <input type="submit" class="btn btn-primary" value="Add task"/>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="addFromSourceModal" tabindex="-1" role="dialog" aria-labelledby="addTaskTitle"
       aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
              aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="addFromSourceTitle">Add from Source</h4>
        </div>
        <div class="modal-body">
          <!--<form id="courseSearchForm" method="GET" action="/courses/search">-->
            <!--<div class="input-group">-->
              <!--<input type="text" class="form-control" name="query" value="" placeholder="Search for a course">-->
              <!--<span class="input-group-btn">-->
                <!--<button class="btn btn-default" type="submit"><i class="fa fa-search fa-fw"></i> Search</button>-->
              <!--</span>-->
            <!--</div>-->
          <!--</form>-->
          <div class="btn-group" data-toggle="buttons">
            {{#each courses}}
              <label class="btn btn-primary">
                <input type="radio" name="query" class="courseSearchButton" value="{{name}}"> {{name}}
              </label>
            {{/each}}
          </div>
          <hr/>
          <div id="courseSearchResults">
            <ul class="list-group">
              <li class="list-group-item">
                Search a course name to get started!
              </li>
            </ul>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

{{> footer}}
